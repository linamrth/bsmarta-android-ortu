<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvpertemuan"
            android:gravity="center"
            android:textSize="16dp"
            android:fontFamily="@font/nunitosemibold"
            android:textColor="@color/colorPrimary"
            android:text="Pertemuan 1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvhari"
            android:layout_below="@+id/tvpertemuan"
            android:gravity="center"
            android:textSize="14dp"
            android:fontFamily="@font/nunitosemibold"
            android:textColor="#362240"
            android:text="Senin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvtanggal"
            android:layout_below="@+id/tvhari"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="#362240"
            android:fontFamily="@font/nunitosemibold"
            android:text="14 Mei 2018"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvjam"
            android:layout_below="@+id/tvtanggal"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="#362240"
            android:fontFamily="@font/nunitosemibold"
            android:text="11.00 - 12.00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvnamaguru"
            android:layout_below="@+id/tvjam"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="14dp"
            android:fontFamily="@font/nunitosemibold"
            android:textColor="#362240"
            android:text="Rosmelia Capriana"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7F7E7F"
            android:layout_marginTop="1dp"/>
    </LinearLayout>
</RelativeLayout>