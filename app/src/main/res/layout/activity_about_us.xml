<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:context=".Fitur.Menu.AboutUs"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="@color/graylight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/logobsmart"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tentangaplikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosemibold"
            android:textSize="12dp"
            android:text="B'Smart Rumah Belajar merupakan sebuah aplikasi monitoring perkembangan belajar siswa. Aplikasi ini dibangun untuk mempermudah orangtua dalam memonitoring perkembangan belajar siswa."/>
    </LinearLayout>
    <TextView
        android:paddingTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/nunitosemibold"
        android:textSize="9dp"
        android:text="Lina Meritha - D3 Teknik Informatika - PENS"/>
</LinearLayout>